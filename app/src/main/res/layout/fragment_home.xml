<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNews"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:text="Latest News"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuiz" />

    <Button
        android:id="@+id/btnFaq"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:text="FAQ"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNews" />

    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:text="Play a Quiz!"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:text="I want to Donate"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFaq" />

    <Button
        android:id="@+id/btnAchievements"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:text="Achievements"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHelp" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:text="Exit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAchievements" />

</androidx.constraintlayout.widget.ConstraintLayout>